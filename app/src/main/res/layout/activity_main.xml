<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="426dp"
        android:orientation="vertical"
        android:weightSum="1">

        <!--<EditText-->
            <!--android:id="@+id/etFullName"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ems="10"-->
            <!--android:hint="Search Player: (First_Name Last_Name)"-->
            <!--android:inputType="textPersonName" />-->

        <requestFocus />

        <Button
            android:id="@+id/btnPlayer_Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="search"
            android:text="Search For A Player" />
        <Button
            android:id="@+id/btnHR_AT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="hrlead"
            android:text="Home Runs: All Time" />
        <Button
            android:id="@+id/btnHR_Season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="hr2"
            android:text="Home Runs: Single Season" />
        <Button
            android:id="@+id/btnWin_AT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="win1"
            android:text="Pitcher Wins: All time" />
        <Button
            android:id="@+id/btnWin_Season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="win2"
            android:text="Pitcher Wins: Single Season" />
        <Button
            android:id="@+id/btnRBI_AT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rbi1"
            android:text="Runs Batted In: All Time" />
        <Button
            android:id="@+id/btnRBI_Season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rbi2"
            android:text="Runs Batted In: Single Season" />
        <Button
            android:id="@+id/btnSB_AT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="sb1"
            android:text="Stolen Bases: All Time" />
        <Button
            android:id="@+id/btnSB_Season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="sb2"
            android:text="Stolen Bases: Single Season" />
        <Button
            android:id="@+id/btnList_Players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="sb2"
            android:text="List of All Players in MLB History" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/meme" />

    </LinearLayout>

</ScrollView>
