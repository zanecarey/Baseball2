<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zane.baseball.PitchingButtons"
    android:background="@drawable/lin">

    <Button
        android:id="@+id/btnWin_AT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="win1"
        android:minHeight="0dp"
        android:layout_margin="4dp"
        android:text="Pitcher Wins: All time" />
    <Button
        android:id="@+id/btnWin_Season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="win2"
        android:minHeight="0dp"
        android:layout_margin="4dp"
        android:text="Pitcher Wins: Single Season"
        android:layout_below="@+id/btnWin_AT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnSO_AT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="so1"
        android:minHeight="0dp"
        android:layout_margin="4dp"
        android:text="Strike Outs: All time"
        android:layout_below="@+id/btnWin_Season"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnSO_Season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="so2"
        android:minHeight="0dp"
        android:layout_margin="4dp"
        android:text="Strike Outs: Single Season"
        android:layout_below="@+id/btnSO_AT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnER_AT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="era1"
        android:minHeight="0dp"
        android:layout_margin="4dp"
        android:text="Earned Run Average: All time"
        android:layout_below="@+id/btnSO_Season"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnERA_Season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="era2"
        android:minHeight="0dp"
        android:layout_margin="4dp"
        android:text="Earned Run Average: Single Season"
        android:layout_below="@+id/btnER_AT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnzWar_Career"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="era2"
        android:minHeight="0dp"
        android:layout_margin="4dp"
        android:text="zWar: Career"
        android:layout_below="@+id/btnWHIP_Season"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnzWar_Season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="era2"
        android:layout_margin="4dp"
        android:minHeight="0dp"
        android:text="zWar: Single Season"
        android:layout_below="@+id/btnzWar_Career"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnWHIP_Career"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="era2"
        android:minHeight="0dp"
        android:layout_margin="4dp"
        android:text="WHIP: Career"
        android:layout_below="@+id/btnERA_Season"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnWHIP_Season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="era2"
        android:minHeight="0dp"
        android:layout_margin="4dp"
        android:text="WHIP: Single Season"
        android:layout_below="@+id/btnWHIP_Career"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
