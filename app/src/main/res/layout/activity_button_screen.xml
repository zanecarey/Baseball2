<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/field">
    tools:context="com.example.zane.baseball.ButtonScreen">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search For A  Player"
        android:id="@+id/search_button"
        android:layout_marginTop="134dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#c3100d" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Offensive Categories"
        android:id="@+id/batting_button"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/search_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:background="#c3100d" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pitching Categories"
        android:id="@+id/pitching_button"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/batting_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#c3100d" />
</RelativeLayout>
